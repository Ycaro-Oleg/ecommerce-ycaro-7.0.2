

<%= simple_form_for(resource, html: { class: 'login-form'} ,as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class= "text-center">
  <%= f.error_notification %>
  <%= render 'devise/shared/error_messages'%>
  </div>

  <div class="form-inputs">
  <%= f.input :name, label: false, placeholder: 'Nome' %>
  <%= f.input :phone, label: false, placeholder: 'Telefone' %>
    <%= f.input :email,
                required: true,
                placeholder: 'Email',
                label: false,
                autofocus: true,
                input_html: { autocomplete: "email" }%>
    <%= f.input :password,
                required: true,
                label: false,
                placeholder: 'Senha',
                hint: (" Mínimo de caractéres #{@minimum_password_length}" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                required: true,
                label: false,
                placeholder: 'Confirmar senha',
                input_html: { autocomplete: "new-password" } %>
  </div>

  <%= render 'devise/shared/button_submit', f: f, text: 'Cadastrar'%>
  
<% end %>

<%= render "devise/shared/links" %>
